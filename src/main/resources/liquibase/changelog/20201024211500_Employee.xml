<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="autoIncrement" value="true" dbms="postgresql"/>

    <changeSet id="20201024211500" author="rasulbek">
        <createTable tableName="main_employee">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="full_name" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="birthday" type="date">
                <constraints nullable="false"/>
            </column>
            <column name="nation" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="phone" type="bigint">
            </column>
            <column name="email" type="varchar(120)">
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
