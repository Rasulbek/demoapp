<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <property name="now" value="current_timestamp" dbms="postgresql"/>

    <property name="autoIncrement" value="true" dbms="postgresql"/>

    <changeSet id="20201026193500" author="rasulbek">
        <createTable tableName="main_academic_degree">
            <column name="id" type="bigint" autoIncrement="${autoIncrement}">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="institution_name" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="discipline" type="varchar(250)">
                <constraints nullable="false"/>
            </column>
            <column name="begin_year" type="int(4)">
                <constraints nullable="false"/>
            </column>
            <column name="end_year" type="int(4)">
                <constraints nullable="false"/>
            </column>
            <column name="degree" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="employee_id" type="bigint">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="20201026193500-1" author="rasulbek">
        <addForeignKeyConstraint baseColumnNames="employee_id"
                                 baseTableName="main_academic_degree"
                                 constraintName="fk_academic_employee_id"
                                 referencedColumnNames="id"
                                 referencedTableName="main_employee"/>
    </changeSet>

</databaseChangeLog>
